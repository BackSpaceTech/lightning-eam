template(name='viewItemsPage')
  if customTemplate
    +viewItemsPageCustom  
  else  
    .container
      .row
        div
          h5
            | Inventory Items
            br
          .row.viewItems
            .col.s12.m9.l10
              if serverConnected
                .hide-on-large-only
                  .fixed-action-btn.click-to-toggle(style='bottom: 45px; right: 24px;')
                    a.btn-floating.btn-large.purple
                      i.large.mdi-navigation-menu
                    ul
                      li
                        button.btn-floating.teal.tooltipped(type='button', onclick='history.back(-1)', data-position='left', data-delay='50' , data-tooltip='Go Back')
                          i.material-icons skip_previous
                      li                     
                        a.btnEdit.btn-floating.tooltipped(type='button', data-position='left', data-delay='50' , data-tooltip='Edit Item')
                          i.fa.fa-edit
                      li
                        a.btnNew.btn-floating.green.tooltipped(type='button', data-position='left', data-delay='50' , data-tooltip='Create new item')
                          i.fa.fa-cube
                      li
                        a.btnNewDB.btn-floating.green.tooltipped(type='button', data-position='left', data-delay='50', data-tooltip='Create new item tree')
                          i.fa.fa-sitemap
                      li
                        a.btnView.btn-floating.teal.tooltipped(type='button', data-position='left', data-delay='50' , data-tooltip='View item')
                          i.fa.fa-search
                .hide-on-med-and-down
                  button.btnNewDB.btn-floating.btn-large.waves-effect.waves-light.tooltipped(type='button', data-position='bottom', data-delay='50', data-tooltip='Create new item tree')
                    i.fa.fa-sitemap
                  button.btnNew.btn-floating.btn-large.waves-effect.waves-light.tooltipped(type='button', data-position='bottom', data-delay='50' , data-tooltip='Create new item')
                    i.fa.fa-cube
                  button.btnEdit.btn-floating.btn-large.waves-effect.waves-light.tooltipped(type='button', data-position='bottom', data-delay='50' , data-tooltip='Edit item')
                    i.fa.fa-edit
                  button.btnView.btn-floating.btn-large.waves-effect.waves-light.tooltipped(type='button', data-position='bottom', data-delay='50' , data-tooltip='View item')
                    i.fa.fa-search
                  |                   |
                  button.btnDelete.btn-floating.btn-large.waves-effect.waves-light.red.tooltipped(type='button', data-position='bottom', data-delay='50' , data-tooltip='Delete item')
                    i.fa.fa-trash-o

            
          +treeView nodeID=itemDetails.referenceID nodeText=itemDetails.text
    
