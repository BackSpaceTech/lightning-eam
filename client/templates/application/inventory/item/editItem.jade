template(name='editItemPage')
  if customTemplate
    +editItemPageCustom  
  else
    .container2 
      br
      fieldset
        legend Edit Item 
        +autoForm schema=itemFormSchema id="editItemPage" type="update" collection="Items" doc=currentDoc
          if Template.subscriptionsReady
            .row.firstRow
              .col.s12.m6.l3
                +afQuickField name='referenceID'
              .col.s12.m6.l3
                +afQuickField name='stockUnits'              
              +smlField item=txtClassificationID label='Item Classification'
              +afQuickField name='classificationID' value=itemClassID type='hidden'
              +frmBtnAdd label='Add'
              .col.s12.m6.l3
                +afQuickField name='status'
              .row
                div
                  +afQuickField name='text'
                div
                  +afQuickField name='description'
          else
            +spinner
          +fabBackResetSubmit 

