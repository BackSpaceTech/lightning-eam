template(name='viewWorkPage')
  if customTemplate
    +viewWorkPageCustom
  else 
    .container2
      br
      fieldset
        legend View Work          
        button.btnSearch.btn-floating.teal.tooltipped.right(type='button', data-position='left', data-tooltip='Search')
          i.fa.fa-search
        if Template.subscriptionsReady
          .row
            .switch
              label
                | Quick Search
                input#swtViewWork1(type='checkbox')
                span.lever
                | Advanced Search
          if quickSearch
            +viewWorkQuick
          else
            +viewWorkAdvanced            
          .row
            .divider.teal
            .section
              h6.teal-text Asset
              +treeAssets assets=assetDetails
          // FAB button  
          +fabBackSearch                                                  
        else
          +spinner
        br          

template(name='viewWorkQuick')
  .row.input-field
    h6 Quick Search      
    input#radioViewWork0(name='group1', type='radio', checked='checked')
    label(for='radioViewWork0') My Requests
    input#radioViewWork1(name='group1', type='radio')
    label(for='radioViewWork1') Open Requests
    input#radioViewWork2(name='group1', type='radio')
    label(for='radioViewWork2') Approved Work Requests
    input#radioViewWork3(name='group1', type='radio')
    label(for='radioViewWork3') Approved Work Orders    

template(name='viewWorkAdvanced')
  .row
    h6 Advanced Search      
    .row.input-field   
      h6.teal-text Status                        
      .col.s12.m6.l3
        input#chkViewWork0(type='checkbox')
        label(for='chkViewWork0') 0 Request Cancelled
      .col.s12.m6.l3
        input#chkViewWork1(type='checkbox')
        label(for='chkViewWork1') 1 Request Started
      .col.s12.m6.l3
        input#chkViewWork2(type='checkbox')
        label(for='chkViewWork2') 2 Request Accepted
      .col.s12.m6.l3                
        input#chkViewWork3(type='checkbox')
        label(for='chkViewWork3') 3 Request Returned 
      .col.s12.m6.l3
        input#chkViewWork4(type='checkbox')
        label(for='chkViewWork4') 4 Work Order Created
      .col.s12.m6.l3
        input#chkViewWork5(type='checkbox')
        label(for='chkViewWork5') 5 Work Order Approved
      .col.s12.m6.l3                
        input#chkViewWork6(type='checkbox')
        label(for='chkViewWork6') 6 Work Order Planned
      .col.s12.m6.l3
        input#chkViewWork7(type='checkbox')
        label(for='chkViewWork7') 7 Work Order Scheduled
      .col.s12.m6.l3
        input#chkViewWork8(type='checkbox')
        label(for='chkViewWork8') 8 Work Order In Progress
      .col.s12.m6.l3
        input#chkViewWork9(type='checkbox')
        label(for='chkViewWork9') 9 Work Order Completed
      .col.s12.m6.l3
        input#chkViewWork10(type='checkbox')
        label(for='chkViewWork10') 10 Financially Completed
      .col.s12.m6.l3
        input#chkViewWork11(type='checkbox')
        label(for='chkViewWork11') 11 Reviewed   
      .col.s12.m6.l3
        input#chkViewWork12(type='checkbox')                                                                                                          
        label(for='chkViewWork12') 12 Closed    
    .row.input-field  
      .divider.teal
      .section  
        h6.teal-text Dates    
        .row  
          input#radioViewWorkDates0(name='group1', type='radio', checked='checked')
          label(for='radioViewWorkDates0') Requested
          input#radioViewWorkDates1(name='group1', type='radio')
          label(for='radioViewWorkDates1') WO Approved
          input#radioViewWorkDates2(name='group1', type='radio')
          label(for='radioViewWorkDates2') WO Completed  
        .row
          .col.s8.m4.l2.input-field           
            input#dateViewWorkFrom.datepicker(type='date')   
            label.active(for='dateViewWorkFrom') From
          .col.s8.m4.l2.input-field            
            input#dateViewWorkTo.datepicker(type='date')   
            label.active(for='dateViewWorkFrom') To         
