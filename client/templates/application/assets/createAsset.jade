template(name='createAssetPage')
  if customTemplate
    +createAssetPageCustom
  else
    .container2
      if Template.subscriptionsReady
        br
        +autoForm schema=locationFormSchema id='createAssetPage' type='method' meteormethod='createLoc'
          fieldset
            legend New Asset
            .row
              .col.s12.m6.l3
                +afQuickField name='id' label='*ID'
                +afQuickField name='type' value='asset' type='hidden'
              .col.s12.m6.l3
                +afQuickField name='parent' value=parentID defaultValue='#' type='hidden'
              .col.s12.m6.l3
                +afQuickField name='children' value=children type='hidden'                
              .col.s12.m6.l3
                +afQuickField name='criticality' label='*Criticality'
              .col.s12.m6.l3
                +afQuickField name='classification'
              .col.s12.m6.l3
                +afQuickField name='status'
              .col.s12.m6.l3
                +afQuickField name='rotable'
              div
                +afQuickField name='text' label='*Title'
              div
                +afQuickField name='description'
              div
                +afQuickField name='safety'
            .row
              .divider.teal
              .section
                h6.teal-text Geolocation Information
                .col.s12.m6.l3
                  +afQuickField name='linear'
                .col.s12.m6.l3
                  +afQuickField name='lat1'
                .col.s12.m6.l3
                  +afQuickField name='long1'
                .col.s12.m6.l3
                  +afQuickField name='lat2'
                .col.s12.m6.l3
                  +afQuickField name='long2'  
            .row
              .divider.teal
              .section
                h6.teal-text Manufacture Information
                .col.s12.m6.l3
                  +afQuickField name='serialNumber'
                .col.s12.m6.l3
                  +afQuickField name='modelNumber'
                .col.s12.m6.l3
                  +afQuickField name='manufacturer'
                .col.s12.m6.l3
                  +afQuickField name='manufPhone'
                div
                  +afQuickField name='manufAddress'
                .col.s12.m6.l3
                  +afQuickField name='manufState'
                .col.s12.m6.l3
                  +afQuickField name='manufZip'
            .row
              .divider.teal
              .section
                h6.teal-text Additional Information
                .col.s12.m6.l3
                  +afQuickField name='urlTechData'
                .col.s12.m6.l3
                  +afQuickField name='urlOpData'
                .col.s12.m6.l3
                  +afQuickField name='urlPhoto'
                .col.s12.m6.l3
                  +afQuickField name='referenceID'
                .col.s12.m6.l3
                  h6.grey-text.text-lighten-1 Manufacture Date
                  +afQuickField name='manufDate'
                .col.s12.m6.l3
                  h6.grey-text.text-lighten-1 Install Date
                  +afQuickField name='installDate'
            .form-group
              .fixed-action-btn.click-to-toggle(style='bottom: 45px; right: 24px;')
                a.btn-floating.btn-large.purple
                  i.large.mdi-navigation-menu
                ul
                  li
                    button.btn-floating.yellow.darken-1.tooltipped(type='button', onclick='history.back(-1)', data-position='left', data-tooltip='Go Back')
                      i.material-icons skip_previous
                  li
                    button.btn-floating.red.tooltipped(type='reset', data-position='left', data-tooltip='Reset Form')
                      i.fa.fa-undo
                  li
                    button.btn-floating.green.tooltipped(type='submit', data-position='left', data-tooltip='Submit Form')
                      i.fa.fa-check                                       
      else
        +spinner
      br
    
